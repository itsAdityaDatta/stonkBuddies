<div class="custFont">
    <br>
    <h5 class="custFontAbel">Create Group</h5>
    <p class="custFontAbel">Create a new group, add your stonkBuddies</p>

    <div class="row z-depth-1 addGroup" >
        <form action="/groups" method="POST" class="col s12">
            <div class="row">
                <div class="input-field">
                    <input type="text" id="title" name="title">
                    <label for="title">Title</label>
                </div>
                <div class="input-field">
                    <input type="text" id="body" name="body"></input>
                    <label for="body">Description</label>
                </div>

            </div>
            <div class="row m4">
                <div class="input-field">
                    <select id="status" name="status">
                        <option value="public" selected>Public</option>
                        <option value="public">Private</option>
                    </select>
                    <label for="status">Status</label>
                </div>
            </div>
            <br>
            <h5 class="custFontAbel">Add Members:</h5>
            <div class="row s12">
                <input type="email" id="mem1" name="mem1">
                <label for="title">Email - Member 1</label>
                <input type="email" id="mem2" name="mem2">
                <label for="title">Email - Member 2</label>
                <input type="email" id="mem3" name="mem3">
                <label for="title">Email - Member 3</label>
            </div>

            <br>

            <div class="row">
                <input type="submit" value="Save" class="btn blue darken-1">
                <a href="/dashboard" class="btn orange">Cancel</a>
            </div>

        </form>
    </div>
</div>